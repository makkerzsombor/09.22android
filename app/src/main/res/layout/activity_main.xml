<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/szoveg"
        android:text="Írjon ide valamit"
        android:textSize="20sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nagyb"
        android:text="nagy betűs szöveg"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/szoveg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kisb"
        android:text="kis betűs szöveg"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nagyb"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/random"
        android:text="véletlen szín generálás"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/kisb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kesz"
        android:layout_below="@+id/random"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>